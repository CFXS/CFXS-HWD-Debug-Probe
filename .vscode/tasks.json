{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ninja",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute",
                    "${workspaceRoot}"
                ]
            }
        },
        {
            "label": "Generate linker file",
            "type": "shell",
            "command": "lua",
            "args": [
                "${workspaceRoot}/CMake/Scripts/LinkerGen/LinkerGen.lua",
                "${workspaceRoot}/CMake/Scripts/LinkerGen",
                "${workspaceRoot}/CFXS_HWD_Debug_Probe/cfg/TM4C129x.lua",
                "${workspaceRoot}/CFXS_HWD_Debug_Probe/cfg/LinkerScript.ld",
            ],
            "group": "test"
        },
        {
            "label": "Quartus Compile",
            "type": "shell",
            "command": "${config:QUARTUS_PATH}/quartus_sh --flow compile CFXS_HWD_TestDev",
            "options": {
                "cwd": "${workspaceRoot}/Dev/Quartus"
            },
            "group": "test",
            "problemMatcher": {
                "owner": "VHDL",
                "source": "Quartus",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(Error) \\((\\d+)\\):.+\\):? (.+)File: (.+) Line: (\\d+)",
                    "file": 4,
                    "line": 5,
                    "severity": 1,
                    "message": 3,
                },
            }
        },
        {
            "label": "Quartus Program",
            "type": "shell",
            "command": "${config:QUARTUS_PATH}/quartus_pgm -m jtag -o \\\"p;CFXS_HWD_TestDev.sof@2\\\"",
            "options": {
                "cwd": "${workspaceRoot}/Dev/Quartus/output_files"
            },
            "group": "test",
        },
        {
            "label": "Quartus Compile + Program",
            "type": "shell",
            "dependsOn": [
                "Quartus Compile",
                "Quartus Program"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": {
                "owner": "VHDL",
                "source": "Quartus",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(Error) \\((\\d+)\\):.+\\):? (.+)File: (.+) Line: (\\d+)",
                    "file": 4,
                    "line": 5,
                    "severity": 1,
                    "message": 3,
                },
            }
        }
    ]
}